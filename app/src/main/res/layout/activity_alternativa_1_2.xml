<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mac.myapplication.Alternativa_1_2">

    <TextView
        android:layout_width="match_parent"
        android:background="#64B5F6"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:text="Y le dijo el saltamontes pues claro tu que te creías."
        android:textAlignment="center"
        android:gravity="center_vertical"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="8dp"
        android:text="¿Que le dijo el niño al saltamontes?"
        android:background="#F44336"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_margin="4dp">

        <TextView
            android:layout_width="0dp"
            android:background="#F50057"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:text="Pues que eras un saltamontes normal,como todos."
            android:onClick="alternativa1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:text="¿Pues no se? Un bicho normal"
            android:background="#9C27B0"
            android:onClick="alternativa2"/>

    </LinearLayout>


</LinearLayout>
